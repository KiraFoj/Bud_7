<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Bud_7.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
                <Label Text="Введите дату и время:" FontSize="20" HorizontalOptions="Center" />
                <DatePicker x:Name="datePicker" />
                <TimePicker x:Name="timePicker" />
                <Label Text="Введите сообщение:" FontSize="20" HorizontalOptions="Center" />
                <Entry x:Name="messageEntry" />
                <Button Text="Установить напоминание" Clicked="SetReminderButton_Clicked" />
                <Button Text="Очистить" Clicked="ClearButton_Clicked" />
            </StackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
